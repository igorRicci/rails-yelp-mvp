<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p> Address: <%= @restaurant.address %> </p>
  <p> Category: <%= @restaurant.category.capitalize %> </p>
  <p> Phone: <%= @restaurant.phone_number ? @restaurant.phone_number : "Google it!" %> </p>

  <hr>
  <h2>Add a review</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating, placeholder: '0 to 5' %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
  <hr>

  <p><%= link_to 'Home', restaurants_path %></p>
</div>
