<div class="container">
  <h1>Add a restaurant</h1>
  <%= simple_form_for [@restaurant] do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, :collection => %w[chinese italian japanese french belgian brazilian junk_food] %>
    <%= f.submit "Add new restaurant", class: "btn btn-primary" %>
  <% end %>
</div>
